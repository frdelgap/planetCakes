extends layout

block content  
  .container    
    h2.form-signin-heading BLOG PÃšBLICO - PLANET CAKES	
    form(role='form', action='/loginUsers',method='post').form-signin        
      label.sr-only(for='username') Username        
      input#username.form-control(type='text', name="username" , placeholder='Introduce Username', required='', autofocus='')        
      label.sr-only(for='password') Password        
      input#password.form-control(type='password',name="password", placeholder='Password', required='')        
      .checkbox          
        label            
          input(type='checkbox', value='remember-me')            
          |  Recordar                
      .col-lg-6           
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Entrada usuario 
      .col-lg-6          
        a(href='/')            
          button.btn.btn-lg.btn-secondary.btn-block(type="button") Cancelar
      .col-lg-6          
        a(href='/registro')            
          button.btn.btn-lg.btn-secondary.btn-block(type="button") No tengo cuenta, registrarme

      -if (typeof flash !='undefined')
        - if (flash.warning)
          div.alert-message.warning
            p=flash.warning
        - if (flash.info)
          div(data-alert='alert').alert-message.success
            p=flash.info

